<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swiperefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/coming_soon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/coming_soon"
            android:layout_marginStart="@dimen/dim8"
            android:layout_marginTop="@dimen/dim8"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coming_soon_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/coming_soon_text"
            tools:listitem="@layout/movie_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />
        <TextView
            android:id="@+id/in_theater_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coming_soon_rv"
            android:text="@string/in_theater"
            android:layout_marginStart="@dimen/dim8"
            android:layout_marginTop="@dimen/dim8"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/in_theater_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/in_theater_text"
            android:layout_marginTop="@dimen/dim8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />
        <TextView
            android:id="@+id/top_rated_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/in_theater_rv"
            android:text="@string/top_rated"
            android:layout_marginStart="@dimen/dim8"
            android:layout_marginTop="@dimen/dim8"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_rated_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top_rated_text"
            android:layout_marginTop="@dimen/dim8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            />
        <TextView
            android:id="@+id/top_ten_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_rated_rv"
            android:text="@string/top_ten_in_hollywood"
            android:layout_marginStart="@dimen/dim8"
            android:layout_marginTop="@dimen/dim8"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_ten_rv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/top_ten_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dim8"
            android:layout_marginTop="@dimen/dim8"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>